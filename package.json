{
    "name": "dashwave-cloud-build",
    "displayName": "Dashwave Cloud Build",
    "icon": "src/assets/icon.png",
    "description": "Build and debug your cloud applications with Dashwave Cloud Build.",
    "version": "0.0.2",
    "publisher": "dashwave",
    "engines": {
        "vscode": "^1.86.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dashwave/vscode-extension"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration":{
            "type": "object",
            "title": "Dashwave Cloud Build Settings",
            "properties": {
                "dashwave.pluginEnv":{
                    "type": "string",
                    "default": "",
                    "description": "The environment to use for the plugin"
                },
                "dashwave.pluginMode":{
                    "type": "string",
                    "default": "",
                    "description": "The mode to use for the plugin"
                }
            }
        },
        "commands": [
            {
                "command": "extension.runDashwaveBuild",
                "title": "Run Dashwave Build"
            },
            {
                "command": "extension.buildAndEmulate",
                "title": "Build and Emulate"
            },
            {
                "command": "extension.debug",
                "title": "Debug"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "dashwaveViewContainer",
                    "title": "Dashwave Cloud Build",
                    "icon": "src/assets/icon.png"
                }
            ]
        },
        "views": {
            "dashwaveViewContainer": [
                {
                    "id": "dashwaveLoginView",
                    "type": "webview",
                    "name": "Login User",
                    "when": "!dashwave:userLoggedIn"
                },
                {
                    "id": "dashwaveCreateProjectView",
                    "type": "webview",
                    "name": "Create Project",
                    "when": "dashwave:userLoggedIn && !dashwave:projectConnected"
                },
                {
                    "id": "dashwaveBuildActionsView",
                    "type": "webview",
                    "name": "Build Actions",
                    "when": "dashwave:userLoggedIn && dashwave:projectConnected"
                },
                {
                    "id": "dashwaveBuildOptsView",
                    "type": "webview",
                    "name": "Build Options",
                    "when": "dashwave:userLoggedIn && dashwave:projectConnected"
                },
                {
                    "id": "dashwaveConfigurationView",
                    "type": "webview",
                    "name": "Configurations",
                    "when": "dashwave:userLoggedIn && dashwave:projectConnected"
                },
                {
                    "id": "dashwaveUsersView",
                    "type": "webview",
                    "name": "Users",
                    "when": "dashwave:userLoggedIn && dashwave:projectConnected"
                },
                {
                    "id": "dashwaveHelpView",
                    "type": "webview",
                    "name": "Help and Feedback"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "build": "vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.86.0",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.56.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.90.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "jsonc-parser": "^3.2.1"
    }
}
